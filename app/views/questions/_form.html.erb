<%= form_for(@question) do |f| %>
  <% if @question.errors.any? %>
    <%= render 'shared/error_explanation', obj: @question  %>
  <% end %>

  <div class="field">
    <%= f.label :title %> <br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %> <br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
